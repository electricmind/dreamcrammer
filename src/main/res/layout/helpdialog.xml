<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center"/>

    <LinearLayout
            android:layout_width="201dp"
            android:layout_height="298dp"
            android:layout_margin="@dimen/column_size"
            android:orientation="vertical" android:weightSum="1">

        <TextView
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:text="This application strives to help you improve your vocabulary"
                android:gravity="center" android:layout_weight="0.35" android:textSize="20dp" android:textStyle="bold"/>

        <TextView
                android:id="@+id/help_branch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Branch: branch"
                android:gravity="center"
                />

        <TextView
                android:id="@+id/help_commit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Commit: commit"
                android:gravity="center"
                />
        <TextView
                android:id="@+id/help_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date: 2015-12-12"
                android:gravity="center"
                />
        <TextView
            android:id="@+id/help_age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="The application is 1 days old"
            android:gravity="center"
            android:layout_weight="0.24" android:textStyle="bold|italic"/>
    </LinearLayout>
</LinearLayout>
